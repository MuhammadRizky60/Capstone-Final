                    android:layout_marginTop="5dp"
                    android:textColor="@color/black"
                    android:text="Buah Apel"
                    android:textAlignment="center"
                    android:textSize="10sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>

